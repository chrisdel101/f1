extends layout

include mixins/_select
include mixins/_driverCard
block content
  //- - console.log(driverAction)
  h1= title
  +select({
    method:method,
    action: driverAction,
    enctype: enctype,
    selectName: driverSelectName,
    enums: driverEnums, 
    buttonType: buttonType,
    buttonValue: buttonValue,
    buttonField: buttonField 
  })
  +select({
    method:method,
    action: teamAction,
    enctype: enctype,
    selectName: teamSelectName,
    enums: teamEnums, 
    buttonType: buttonType,
    buttonValue: buttonValue,
    buttonField: buttonField 
  })
  +driverCard(driverData)