mixin allTeamsCardMixin(teamData, cardSize)
  - console.log('XXX', teamData)
  if cardSize === "full"
    .card.team-card(class=cardSize data-slug=teamData.team_name_slug)
      a(href=`/demo?demo-team=${teamData.team_name_slug}`)
        .team-title
          h5 #{teamData.full_team_name}
        .main-image
          img(src=teamData.images[Math.round(randomNumInRange(0, teamData.images.length-1))])
  else if cardSize === "mini"
    .card.team-card(class=cardSize data-slug=teamData.team_name_slug)
      a(href=`/teams/${teamData.team_name_slug}`)
        .team-title
          h6 #{teamData.full_team_name}
        .main-image
          img(src=teamData.images[Math.round(randomNumInRange(0, teamData.images.length-1))])
