mixin allDriverMixin(data)
  //- - console.log('D', data)
  .card.driver-card(class=data.size data-slug=data.name_slug)
      li
        a(href="javascript:void(0);").driver-click
          .driver-title-container 
            h6  #{data.driver_name}
            .flag-img-container
              img(src=data.flag_img_url)
          .main-image-container
            img(src=data.main_image)