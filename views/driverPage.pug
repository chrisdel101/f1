extends layout
block layoutVariables
  //-   https://stackoverflow.com/a/20502117/5972531
    assign this back to LAYOUT file
  - let hideNav= noNav || false
block content

  include mixins/_toggleSwitch
  include mixins/_driverCardMixin
  include mixins/_allDriversCardMixin
  block append content
      .driver-card-page
          //- used with /api
          if !noToggle 
            div(id=`${pageType}-toggle-card` class=`toggle-switch-container`) 
              div.toggle-text Hide Demo
              +toggleSwitch({pageType, urls, ENV, toggleState,toggleNextEndpoint, toggleHideNav}) 
          //- render single mini card
          if cardSize === "mini"
            +allDriversCardMixin(driverData,cardSize)
          else
            +driverCardMixin(driverData)  