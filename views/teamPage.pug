extends layout
block layoutVariables
  //-   https://stackoverflow.com/a/20502117/5972531
    to get just team card, 
    send this to the layout page
  - let hideNav= noNav || false
block content
  include mixins/_teamCardMixin
  include mixins/_allTeamsCardMixin
  include mixins/_toggleSwitch

    //- append the card content to page
  block append content
      .team-card-page
          //- used with /api
          if !noToggle 
            div(id=`${pageType}-toggle-card` class=`toggle-switch-container`) 
                  div.toggle-text Hide Demo
                  +toggleSwitch({pageType, urls, ENV, toggleState,toggleNextEndpoint, toggleHideNav }) 
          - console.log('TT', teamData)

          if cardSize === "mini"
            +allTeamsCardMixin(teamData,cardSize)
          else
            +teamCardMixin(teamData)