extends layout
block content
  .index-hero
    #carouselExampleIndicators.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        each _,i in carouselImages
          li.active(data-target='#carouselExampleIndicators' data-slide-to=i)
      .carousel-inner
        each image, i in carouselImages
          if i === 0
            .carousel-item.active
              picture 
                //- source(srcset=`${image.smallSrc}` media=`(max-width: 500px)`)                
                //- source(srcset=`${image.medSrc}` media=`(max-width: 768px)`)
                //- source(srcset=`${image.lgSrc}` media=`(min-width: 900px)`)
                img(src=`${image.medSrc}`)
                figcaption
                  cite= image.cite
          else 
            .carousel-item
              picture
                //- source(srcset=`${image.smallSrc}` media=`(max-width: 500px)`)                
                //- source(srcset=`${image.medSrc}` media=`(max-width: 768px)`)
                //- source(srcset=`${image.lgSrc}` media=`(min-width: 900px)`)
                img(src=`${image.medSrc}`)
                figcaption
                  cite= image.cite
      a.carousel-control-prev(href='#carouselExampleIndicators' role='button' data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#carouselExampleIndicators' role='button' data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
  main.index-main.fill
     .main-title-container-floating
        h2.sub-title.flex-fill Get Stats
        .demo-button.flex-fill
          a(href="/demo") 
            button.btn-lg.btn-secondary Try It
     .main-title-container
        h2.sub-title= subTitle
        h4.flex-fill Get all the latest stats
        .demo-button.flex-fill
          a(href="/demo") 
            button.btn-lg.btn-secondary Demo
  footer
    
