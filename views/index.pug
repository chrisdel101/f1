extends layout

include mixins/_select

block content
  h1= title
  if routeName === 'index'
    +select({
      method:method,
      action: action,
      enctype: enctype,
      selectName: selectName,
      enums: enums, 
      buttonType: buttonType,
      buttonValue: buttonValue,
      buttonField: buttonField 
    }) 
  else if routeName === 'driver'
    +select({
      method:method,
      action: action,
      enctype: enctype,
      selectName: selectName,
      enums: enums, 
      buttonType: buttonType,
      buttonValue: buttonValue,
      buttonField: buttonField 
    })
      



