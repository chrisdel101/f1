extends layout
block content
  .index-hero
    .index-title-container
      h2.sub-title= subTitle
      .demo-button 
        a(href="/demo") 
          button.btn-lg.btn-primary Try Demo
    #carouselExampleIndicators.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        each _,i in carouselImages
          li.active(data-target='#carouselExampleIndicators' data-slide-to=i)
      .carousel-inner
        each image, i in carouselImages
          if i === 0
            .carousel-item.active
              picture 
                source(srcset=`${image.smallSrc}` media=`(max-width: 500px)`)                
                source(srcset=`${image.medSrc}` media=`(max-width: 768px)`)
                img(src=`${image.medSrc}`)
                figcaption
                  cite= image.cite
          else 
            .carousel-item
              picture
                source(srcset=`${image.smallSrc}` media=`(max-width: 500px)`)                
                source(srcset=`${image.medSrc}` media=`(max-width: 768px)`)
                img(src=`${image.medSrc}`)
                figcaption
                  cite= image.cite
      a.carousel-control-prev(href='#carouselExampleIndicators' role='button' data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#carouselExampleIndicators' role='button' data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
  main.index-main.container
   
